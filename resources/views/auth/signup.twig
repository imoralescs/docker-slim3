<h1>Sign Up</h1>
<form action="{{ path_for('auth.signup') }}" method="POST">
	<div class="form-control{{ errors.firstname ? ' has-error' : '' }}">
		<label for="name">First Name</label>
		<input type="text" name="firstname" id="firstname" value="{{ old.firstname }}" autocomplete="off">
		{% if errors.firstname %}
			<span>{{ errors.firstname | first }}</span>
		{% endif %}
	</div>
	<div class="form-control{{ errors.lastname ? ' has-error' : '' }}">
		<label for="name">Last Name</label>
		<input type="text" name="lastname" id="lastname" value="{{ old.lastname }}" autocomplete="off">
		{% if errors.lastname %}
			<span>{{ errors.lastname | first }}</span>
		{% endif %}
	</div>
	<div class="form-control{{ errors.username ? ' has-error' : '' }}">
		<label for="name">Username</label>
		<input type="text" name="username" id="username" value="{{ old.username }}" autocomplete="off">
		{% if errors.username %}
			<span>{{ errors.username | first }}</span>
		{% endif %}
	</div>
	<div class="form-control{{ errors.email ? ' has-error' : '' }}">
		<label for="name">Email</label>
		<input type="text" name="email" id="email" value="{{ old.email }}" autocomplete="off">
		{% if errors.email %}
			<span>{{ errors.email | first }}</span>
		{% endif %}
	</div>
	<div class="form-control{{ errors.password ? ' has-error' : '' }}">
		<label for="name">Password</label>
		<input type="password" name="password" id="password" autocomplete="off">
		{% if errors.password %}
			<span>{{ errors.password | first }}</span>
		{% endif %}
	</div>
	<button type="submit">Sign up</button>
	{{ csrf_field() | raw }}
</form>
